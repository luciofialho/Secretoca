<?xml version='1.0' encoding='utf-8'?>
<widget id="com.Secretoca.Secretoca" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="networkinterface">
        <param name="browser-package" value="networkinterface" />
    </feature>
    <name>Secretoca</name>
    <description>
        Mobile control for Secretoca smart home
    </description>
    <author email="lucio@solucionar.com.br" href="http://phoniiegap.com">
        Lucio Fialho
    </author>
    <content src="index.html" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
