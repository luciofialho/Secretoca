<?xml version='1.0' encoding='utf-8'?>
<widget id="com.Secretoca.Secretoca" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Secretoca</name>
    <description>
        Mobile control for Secretoca smart home
    </description>
    <author email="lucio@solucionar.com.br" href="http://phoniiegap.com">
        Lucio Fialho
    </author>
    <content src="index.html" />
    <allow-navigation href="*" />    
    <access origin="*" />
    <plugin name="cordova-plugin-networkinterface" source="npm" spec="~1.2.0" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1.2.2" />    
</widget>
